death-saving-throw {
  text-align: left; }
  death-saving-throw .counter-container {
    display: -ms-flexbox;
    display: flex; }
  death-saving-throw .counter-container > div {
    -ms-flex: 1;
    flex: 1; }
  death-saving-throw button {
    background-color: #ccc;
    -webkit-box-shadow: 0px 1px #333;
    box-shadow: 0px 1px #333;
    border: 0;
    border-radius: 30px;
    min-width: 20px;
    outline: none; }
  death-saving-throw button:active {
    background-color: #555; }
  death-saving-throw .counter-trackers div {
    display: inline-block;
    margin-left: 5px;
    margin-right: 5px; }
  death-saving-throw span.filled, death-saving-throw span.unfilled {
    display: inline-block;
    border: 1px solid black;
    border-radius: 50%;
    width: 10px;
    height: 10px;
    margin: auto; }
  death-saving-throw span.filled {
    background-color: black; }
  death-saving-throw h2 {
    text-align: center;
    font-size: 1em;
    padding: 0;
    margin: 0; }