rpg-text-input{display:block}rpg-text-input .inline label{padding-right:5px}rpg-text-input .inline .text{border-bottom:1px solid grey;min-width:100px;display:inline-block}rpg-text-input .underneath label{position:relative;top:22px;font-size:.8em;display:inline}rpg-text-input .underneath .text{min-height:20px;display:block;position:relative;top:-15px;margin:0;padding:0;border-bottom:1px solid grey}rpg-text-input .underneath input{display:block;position:relative;top:-15px;padding:0;width:100%;margin:0}rpg-text-input label{font-weight:700}