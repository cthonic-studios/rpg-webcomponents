character-attribute.is-penalized{color:red}character-attribute.is-boosted{color:green}character-attribute .character-attribute-container.character-attribute-vertical{width:80px;text-align:center}character-attribute .character-attribute-container.character-attribute-vertical .attribute-name{font-weight:700;font-size:.8em}character-attribute .character-attribute-container.character-attribute-vertical editable-number{border:1px solid #000;padding:15px 0 15px;font-size:1.2em;font-weight:700}character-attribute .character-attribute-container.character-attribute-vertical .attribute-bonus-container{border-radius:50%;border:1px solid #000;width:50%;margin:auto;top:-5px;position:relative;background:#fff}